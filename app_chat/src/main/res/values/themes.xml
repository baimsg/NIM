<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chat" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/background</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="md_corner_radius">4dp</item>
        <item name="md_color_title">@color/title_color</item>
        <item name="md_color_content">@color/subtitle_color</item>
        <item name="md_color_button_text">@color/color_primary</item>
    </style>

    <!--没有顶部导航栏-->
    <style name="Theme.Chat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--开屏-->
    <style name="Theme.Chat.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/launcher_bg</item>
    </style>

</resources>